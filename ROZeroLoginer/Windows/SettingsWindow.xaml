<Window x:Class="ROZeroLoginer.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="763" Width="566" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize" MinHeight="700" MinWidth="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 主要內容區域 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <!-- 熱鍵設定 -->
                <GroupBox Header="熱鍵設定" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Name="HotkeyEnabledCheckBox" Content="啟用熱鍵" 
                          IsChecked="True" Margin="0,5"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="熱鍵: " VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Name="HotkeyComboBox" Width="150" SelectedIndex="0" Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Home" Tag="Home" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Insert" Tag="Insert" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Delete" Tag="Delete" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="End" Tag="End" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="PageUp" Tag="PageUp" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="PageDown" Tag="PageDown" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F1" Tag="F1" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F2" Tag="F2" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F3" Tag="F3" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F4" Tag="F4" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F5" Tag="F5" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F6" Tag="F6" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F7" Tag="F7" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F8" Tag="F8" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F9" Tag="F9" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F10" Tag="F10" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F11" Tag="F11" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                <ComboBoxItem Content="F12" Tag="F12" Style="{StaticResource ModernComboBoxItemStyle}"/>
                            </ComboBox>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="注意: 熱鍵設定變更後需要重新啟動應用程式才能生效。" 
                           Foreground="Gray" FontSize="11" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- 一般設定 -->
                <GroupBox Header="一般設定" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Name="StartWithWindowsCheckBox" Content="開機時自動啟動" 
                          IsChecked="False" Margin="0,5"/>

                        <CheckBox Grid.Row="1" Name="ShowNotificationsCheckBox" Content="顯示通知" 
                          IsChecked="True" Margin="0,5"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="TOTP 有效期 (秒): " VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Name="OtpValidityTextBox" Width="100" Text="30"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="OTP 輸入延遲 (毫秒): " VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Name="OtpDelayTextBox" Width="100" Text="2000"/>
                            <TextBlock Text="(建議: 100-5000)" VerticalAlignment="Center" Margin="10,0,0,0" 
                               Foreground="Gray" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 隱私模式設定 -->
                <GroupBox Header="隱私模式設定" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0" Name="PrivacyModeEnabledCheckBox" Content="啟用隱私模式" 
                          IsChecked="True" Margin="0,5" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="1" Text="選擇要隱藏的內容：" 
                           Foreground="Gray" FontSize="11" Margin="0,5"/>

                        <CheckBox Grid.Row="2" Name="HideNamesCheckBox" Content="隱藏名稱" 
                          IsChecked="False" Margin="20,2"/>

                        <CheckBox Grid.Row="3" Name="HideUsernamesCheckBox" Content="隱藏帳號" 
                          IsChecked="False" Margin="20,2"/>

                        <CheckBox Grid.Row="4" Name="HidePasswordsCheckBox" Content="隱藏密碼" 
                          IsChecked="True" Margin="20,2"/>

                        <CheckBox Grid.Row="5" Name="HideSecretKeysCheckBox" Content="隱藏密鑰 (Secret Key)" 
                          IsChecked="True" Margin="20,2"/>
                    </Grid>
                </GroupBox>

                <!-- 遊戲設定 -->
                <GroupBox Header="遊戲設定" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="RO 主程式路徑: " VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Name="RoGamePathTextBox" Width="300" Text="C:\Gravity\RagnarokZero\Ragexe.exe" Height="17"/>
                            <Button Name="BrowseGamePathButton" Content="瀏覽" Style="{StaticResource ButtonStyle}" 
                            Width="60" Click="BrowseGamePathButton_Click" Margin="5,0,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Text="設定 RO 主程式位置以啟用遊戲啟動功能" 
                           Foreground="Gray" FontSize="11" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- 遊戲標題設定 -->
                <GroupBox Header="遊戲標題設定" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="設定要識別的遊戲視窗標題 (完全匹配)：" 
                                   Margin="0,5" FontWeight="SemiBold"/>

                        <ListBox Name="GameTitlesListBox" Grid.Row="1" Height="100" Margin="0,5"
                                 BorderBrush="LightGray" BorderThickness="1"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                            <TextBox Name="NewGameTitleTextBox" Width="250" Height="32" Margin="0,0,5,0"
                                     Text="" VerticalAlignment="Center"/>
                            <Button Name="AddGameTitleButton" Content="新增" Style="{StaticResource ButtonStyle}" 
                                    Width="60" Height="32" Click="AddGameTitleButton_Click" VerticalAlignment="Center"/>
                            <Button Name="RemoveGameTitleButton" Content="移除" Style="{StaticResource ButtonStyle}" 
                                    Width="60" Height="32" Click="RemoveGameTitleButton_Click" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="3" Text="注意：使用 == 進行完全匹配，不支援部分匹配 (Contains)" 
                                   Foreground="Gray" FontSize="11" Margin="0,5"/>
                    </Grid>
                </GroupBox>

                <!-- 安全設定 -->
                <GroupBox Header="安全設定" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="所有帳號資料都使用 AES 加密儲存在本機。" 
                           Foreground="Gray" FontSize="11" Margin="0,5"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                            <Button Name="BackupButton" Content="備份資料" Style="{StaticResource ButtonStyle}" 
                            Width="80" Click="BackupButton_Click"/>
                            <Button Name="RestoreButton" Content="還原資料" Style="{StaticResource ButtonStyle}" 
                            Width="80" Click="RestoreButton_Click"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- 關於 -->

            </StackPanel>
        </ScrollViewer>

        <!-- 按鈕 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
            <Button Name="OkButton" Content="確定" Style="{StaticResource ButtonStyle}" 
                    Width="80" Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="取消" Style="{StaticResource ButtonStyle}" 
                    Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>