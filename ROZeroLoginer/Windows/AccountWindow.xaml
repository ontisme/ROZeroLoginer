<Window x:Class="ROZeroLoginer.Windows.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="帳號設定" Height="740" Width="520"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="名稱:" FontWeight="Bold" Margin="0,5"/>
        <TextBox Grid.Row="1" Name="NameTextBox" Margin="0,5" Height="25"/>

        <TextBlock Grid.Row="2" Text="帳號:" FontWeight="Bold" Margin="0,5"/>
        <TextBox Grid.Row="3" Name="UsernameTextBox" Margin="0,5" Height="25"/>

        <TextBlock Grid.Row="4" Text="密碼:" FontWeight="Bold" Margin="0,5"/>
        <PasswordBox Grid.Row="5" Name="PasswordBox" Margin="0,5" Height="25"/>

        <TextBlock Grid.Row="6" Text="分組:" FontWeight="Bold" Margin="0,5"/>
        <ComboBox Grid.Row="7" Name="GroupComboBox" Margin="0,5" Height="25" IsEditable="True" Style="{StaticResource ModernComboBoxStyle}"/>

        <TextBlock Grid.Row="8" Text="伺服器:" FontWeight="Bold" Margin="0,5"/>
        <ComboBox Grid.Row="9" Name="ServerComboBox" Margin="0,5" Height="25" Style="{StaticResource ModernComboBoxStyle}">
            <ComboBoxItem Content="1" Tag="1"/>
            <ComboBoxItem Content="2" Tag="2"/>
            <ComboBoxItem Content="3" Tag="3"/>
            <ComboBoxItem Content="4" Tag="4"/>
            <ComboBoxItem Content="遊戲預設位置" Tag="0"/>
        </ComboBox>

        <TextBlock Grid.Row="10" Text="角色:" FontWeight="Bold" Margin="0,5"/>
        <ComboBox Grid.Row="11" Name="CharacterComboBox" Margin="0,5" Height="25" Style="{StaticResource ModernComboBoxStyle}">
            <ComboBoxItem Content="1" Tag="1"/>
            <ComboBoxItem Content="2" Tag="2"/>
            <ComboBoxItem Content="3" Tag="3"/>
            <ComboBoxItem Content="4" Tag="4"/>
            <ComboBoxItem Content="5" Tag="5"/>
            <ComboBoxItem Content="6" Tag="6"/>
            <ComboBoxItem Content="7" Tag="7"/>
            <ComboBoxItem Content="8" Tag="8"/>
            <ComboBoxItem Content="9" Tag="9"/>
            <ComboBoxItem Content="10" Tag="10"/>
            <ComboBoxItem Content="11" Tag="11"/>
            <ComboBoxItem Content="12" Tag="12"/>
            <ComboBoxItem Content="13" Tag="13"/>
            <ComboBoxItem Content="14" Tag="14"/>
            <ComboBoxItem Content="15" Tag="15"/>
            <ComboBoxItem Content="遊戲預設位置" Tag="0"/>
        </ComboBox>

        <CheckBox Grid.Row="12" Name="AutoSelectServerCheckBox" Content="自動選擇伺服器" Margin="0,10,0,5" FontWeight="Bold"/>
        <CheckBox Grid.Row="13" Name="AutoSelectCharacterCheckBox" Content="自動選擇角色" Margin="0,5" FontWeight="Bold"/>

        <GroupBox Grid.Row="14" Header="OTP Secret Key" Margin="0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Name="OtpSecretTextBox" Margin="0,5" Height="25" 
                         TextChanged="OtpSecretTextBox_TextChanged"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="當前TOTP: " VerticalAlignment="Center"/>
                    <TextBox Name="PreviewTotpTextBox" Width="100" IsReadOnly="True" 
                             FontFamily="Consolas" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Name="PreviewCountdownTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Text="說明: 請輸入從驗證器應用程式獲得的Secret Key" 
                           Foreground="Gray" FontSize="11" Margin="0,5"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="15" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="OkButton" Content="確定" Style="{StaticResource ButtonStyle}" 
                    Width="80" Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="取消" Style="{StaticResource ButtonStyle}" 
                    Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>